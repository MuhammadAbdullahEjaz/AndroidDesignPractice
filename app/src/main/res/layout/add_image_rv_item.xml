<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="73dp"
    android:layout_height="73dp"
    android:layout_marginEnd="15dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardMC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="@color/gray_2"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/addImageIV"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:contentDescription="@string/addImageIV_contentDescription"
            android:scaleType="fitXY"
            android:src="@drawable/image1" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addImageIVB"
        app:iconTint="@color/gray_1"
        android:backgroundTint="@color/black"
        app:cornerRadius="1000dp"
        app:iconPadding="0dp"
        android:layout_marginTop="-6dp"
        android:layout_marginStart="-12dp"
        android:elevation="2dp"
        app:iconGravity="textStart"
        android:layout_width="15dp"
        android:layout_height="19dp"
        app:icon="@drawable/ic_baseline_cancel_24"
        app:layout_constraintTop_toTopOf="@id/materialCardMC"
        app:layout_constraintStart_toEndOf="@id/materialCardMC"/>

</androidx.constraintlayout.widget.ConstraintLayout>

