<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="@drawable/b_line">

    <TextView
        android:id="@+id/sectionHeadingTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/finalPayoutTV_text"
        android:textColor="@color/black"

        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sectionInputET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/border_none"
        android:fontFamily="@font/montserrat_medium"
        android:inputType="number"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="16sp"

        app:layout_constraintEnd_toStartOf="@id/sectionCurrecnyTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sectionHeadingTV"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/sectionCurrecnyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:text="Kr."
        android:textColor="@color/black"
        android:textSize="16sp"

        app:layout_constraintBaseline_toBaselineOf="@id/sectionInputET"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>