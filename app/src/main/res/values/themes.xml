<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Design" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_2</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/montserrat_regular</item>

    </style>

    <style name="Widget.Design.AddButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="color">@color/gray_2</item>
        <item name="cornerRadius">6dp</item>
        <item name="strokeColor">@color/gray_1</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="Widget.Design.NextButton" parent="">
      <item name="android:textColor">@color/purple_button_color</item>
    </style>
    <style name="Widget.Design.NoOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">0dp</item>
    </style>
    <style name="Widget.Design.AppBar" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/gray_1</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <style name="Widget.Design.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Design.Switch</item>
    </style>
    <style name="ThemeOverlay.Design.Switch" parent="">
        <item name="colorOnSurface">@color/gray_1</item>
        <item name="colorSurface">@color/gray_1</item>
        <item name="colorOnSecondary">@color/purple_1</item>
        <item name="colorSecondary">@color/purple_1</item>
    </style>
</resources>